{
  "compilerOptions": {
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": ".",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "es6",
    "target": "es2019",
    "outDir": ".build",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "rootDir": "."
  }
}
